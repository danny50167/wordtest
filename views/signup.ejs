<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="css/global.css" />
    <link rel="stylesheet" href="css/signin.css" />
    <title>Word Test</title>
  </head>
  <body>
    <form id="form" action="/signup" method="post">
      <input
        class="input"
        required
        type="text"
        name="name"
        id="input_name"
        placeholder="Name"
      /><br />
      <input
        class="input"
        required
        autocomplete="off"
        type="text"
        name="id"
        id="input_ID"
        placeholder="ID"
      /><br />
      <span hidden class="warning" id="warn_id">This ID is already used.</span
      ><br hidden id="warning_br" />
      <input
        class="input"
        required
        autocomplete="off"
        type="number"
        name="age"
        id="input_age"
        placeholder="Age"
      /><br />
      <select name="level" id="input_level">
        <option value="beginner">Beginner</option>
        <option value="intermediate">Intermediate</option>
        <option value="expert">Expert</option></select
      ><br />
      <input
        class="input"
        type="password"
        name="pw"
        id="input_PW"
        placeholder="Password"
      />
    </form>
    <a href="/signin" class="color_blue">Already have a account?</a><br />
    <button type="button" id="btn" class="background_blue">Sign Up</button>

    <script src="client/signup.js"></script>
  </body>
</html>
